<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dps_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@drawable/bg_item_dps"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="1"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#EEEEEE"
        android:textSize="17sp"
        tools:text="50" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/dps1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dps_red"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dps5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/dps_cyan"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/dps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dps_orange"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dps6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/dps_blue"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/dps3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dps_yellow"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dps7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/dps_pink"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">

        <TextView
            android:id="@+id/dps4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dps_green"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dps8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/dps_black"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="8sp"
            android:visibility="gone"
            tools:text="1499.00"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>