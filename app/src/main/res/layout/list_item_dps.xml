<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dps_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_dps"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="1"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="A"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#EEEEEE"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dps1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/dps_red"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dps5"
        app:layout_constraintEnd_toStartOf="@+id/dps2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/defense"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dps_orange"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dps6"
        app:layout_constraintEnd_toStartOf="@+id/dps3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps1"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dps_yellow"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dps7"
        app:layout_constraintEnd_toStartOf="@+id/dps4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps2"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dps_green"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/dps8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps3"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dps_cyan"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dps6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/defense"
        app:layout_constraintTop_toBottomOf="@+id/dps1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dps_blue"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dps7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps5"
        app:layout_constraintTop_toBottomOf="@+id/dps2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dps_pink"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dps8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps6"
        app:layout_constraintTop_toBottomOf="@+id/dps3"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dps8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/dps_black"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:text="9999"
        android:textColor="#000000"
        android:textSize="8sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dps7"
        app:layout_constraintTop_toBottomOf="@+id/dps4"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>